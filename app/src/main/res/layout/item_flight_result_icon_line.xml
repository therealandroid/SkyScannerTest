<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/outBoundContainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

        <ImageView
                android:id="@+id/outBoundCarrierImage"
                android:layout_width="@dimen/favicon_width"
                android:layout_height="@dimen/favicon_height"
                android:layout_weight="0"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/outBoundDepartureAndArrivalTime"
                    android:layout_width="wrap_content"
                    style="@style/PrimaryTextBlackStyle"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/outboundCarrierInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SecondaryTextBlackStyle"
                    android:layout_below="@+id/outBoundDepartureAndArrivalTime"/>

        </RelativeLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="end"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/outBoundDirectionType"
                    android:layout_width="wrap_content"
                    style="@style/PrimaryTextBlackStyle"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/outBoundTotalFlightDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SecondaryTextBlackStyle"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/inBoundContainer"
            android:layout_below="@+id/outBoundContainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

        <ImageView
                android:id="@+id/inBoundCarrierImage"
                android:layout_width="@dimen/favicon_width"
                android:layout_height="@dimen/favicon_height"
                android:layout_weight="0"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/inBoundDepartureAndArrivalTime"
                    android:layout_width="wrap_content"
                    style="@style/PrimaryTextBlackStyle"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/inBoundCarrierInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SecondaryTextBlackStyle"
                    android:layout_below="@+id/inBoundDepartureAndArrivalTime"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

            <TextView
                    android:id="@+id/inBoundDirectionType"
                    android:layout_width="wrap_content"
                    style="@style/PrimaryTextBlackStyle"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/inBoundTotalFlightDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SecondaryTextBlackStyle"
                    android:layout_below="@+id/inBoundDirectionType"/>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>