<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp">

    <ImageView
            android:id="@+id/I1_carrierImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="0"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1">

        <TextView
                android:id="@+id/I1_departureAndArrivalTime"
                android:layout_width="wrap_content"
                style="@style/PrimaryTextBlack"
                android:text="sdfdsfsdfsd"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/I1_carrierDisplayCodeAndName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryTextBlack"
                android:text="dsfdfsdf"
                android:layout_below="@+id/I1_departureAndArrivalTime"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textFontWeight="1">

        <TextView
                android:id="@+id/I1_directionType"
                android:layout_width="wrap_content"
                style="@style/PrimaryTextBlack"
                android:text="sdfdsfsdfsd"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/I1_totalFlightDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondaryTextBlack"
                android:text="dsfdfsdf"
                android:layout_below="@+id/I1_directionType"/>

    </RelativeLayout>
</LinearLayout>